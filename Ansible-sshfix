pipeline {
    agent any
    environment {
     ANSIBLE_PRIVATE_KEY=credentials('automation-key') 
  }

    
    stages {
        stage('Cleanup Junk data') {
            steps {
                script {
                    
                        sh """
                        
                        ansible-playbook -i inventory/hosts  playbooks/maintenance_tasks1.yaml --private-key=$ANSIBLE_PRIVATE_KEY -e 'hosts=${params.SERVER_NAME}'
                        """
                    
                }
            }
        }
    }
}
