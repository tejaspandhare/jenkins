pipeline {
  agent { label 'linux' }
  environment {
   ANSIBLE_PRIVATE_KEY=credentials('automation-key') 
  }
  stages {
    stage('Hello') {
      steps {
        sh 'ansible-playbook -i inventory/hosts --private-key=$ANSIBLE_PRIVATE_KEY  --extra-vars {"${FS_PATH}"}  diskspace.yaml'
        
      }
    }
  }
}
