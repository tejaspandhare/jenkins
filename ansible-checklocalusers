pipeline {
    agent any

    parameters {
        choice(name: 'Server_Choice', choices: ['kmaster1', 'lb1', 'lb2'], description: 'Select servers')
        string(name: 'automation-key', defaultValue: '', description: 'automation-key')
    }

    stages {
        stage('Check Users') {
            steps {
                script {
                    ansiblePlaybook(
                        playbook: 'playbooks/check_local_users.yml',
                        inventory: 'inventory/hosts',
                        extraVars: [target_servers: params.Server_Choice],
                        credentialsId: params.automation-key
                    )
                }
            }
        }
    }
}
