pipeline {
  agent { label 'linux' }
  environment {
   ANSIBLE_PRIVATE_KEY=credentials('automation-key') 
  }
  stages {
    stage('Check Local Users') {
      steps {
        sh """ansible-playbook  --private-key=$ANSIBLE_PRIVATE_KEY --extra-vars '{"SERVER_NAME":"${params.SERVER_NAME}"}'  'playbooks/check_local_users.yml' """
        
      }
    }
  }
}
