pipeline {
    agent any

    parameters {
        string(name: 'targetUsername', defaultValue: '', description: 'Username to check')
    }

    stages {
        stage('Check Local User') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'your-credentials-id', passwordVariable: 'ANSIBLE_PRIVATE_KEY', usernameVariable: '')]) {
                        sh """
                        export ANSIBLE_PRIVATE_KEY
                        export TARGET_USERNAME=${params.targetUsername}
                        ansible-playbook -i all, -e ansible_connection=local playbooks/check_local_user.yml
                        """
                    }
                }
            }
        }
    }
}
