pipeline {
    agent any

    parameters {
        string(name: 'USERNAMES', defaultValue: '', description: 'Enter usernames to check (comma-separated)')
    }

    stages {
        stage('Check Users') {
            steps {
                script {
                    checkout scm // This fetches the Jenkinsfile and other files from the repository
                    ansiblePlaybook(
                        playbook: 'playbooks/check_users.yml',
                        inventory: 'inventory/hosts',
                        extraVars: [usernames: params.USERNAMES]
                    )
                }
            }
        }
    }
