pipeline {
    agent any
    environment {
     ANSIBLE_PRIVATE_KEY=credentials('automation-key') 
  }
    parameters {
        string(name: 'targetUsername', defaultValue: '', description: 'Username to check')
    }

    stages {
        stage('Check Local User') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'automation-key', passwordVariable: 'ANSIBLE_PRIVATE_KEY', usernameVariable: '')]) {
                        sh """
                        export TARGET_USERNAME=${params.targetUsername}
                        ansible-playbook -i inventory/hosts, -e ansible_connection=local playbooks/check_local_user.yml, --private-key=$ANSIBLE_PRIVATE_KEY
                        """
                    }
                }
            }
        }
    }
}
