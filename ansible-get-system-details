pipeline {
    agent any
    environment {
        ANSIBLE_PRIVATE_KEY = credentials('automation-key')
    }

    stages {
        stage('Cleanup Junk data') {
            steps {
                script {
                    // Run the Ansible playbook to gather system details
                    sh """
                    ansible-playbook -i inventory/hosts playbooks/get_system_details.yml --private-key=$ANSIBLE_PRIVATE_KEY -e 'hosts=${params.SERVER_NAME}'
                    """
                }
            }
        }

        stage('Check for CSV') {
            steps {
                script {
                    // Check if the CSV file exists after running the playbook
                    sh 'ls -l ${WORKSPACE}/system_info.csv'
                }
            }
        }

        stage('Archive CSV') {
            steps {
                // Archive the CSV file generated by the Ansible playbook
                archiveArtifacts artifacts: 'system_info.csv', allowEmptyArchive: true
            }
        }
    }

    post {
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'An error occurred during the pipeline execution.'
        }
    }
}
