pipeline {
    agent any
    environment {
     ANSIBLE_PRIVATE_KEY=credentials('automation-key') 
     ANSIBLE_FORCE_COLOR = 'true'
  }

    
    stages {
        stage('Cleanup Junk data') {
            steps {
                script {
                    
                        sh """
                        
                        ansible-playbook -i inventory/hosts playbooks/ubuntu_os_update1.yaml --private-key=${ANSIBLE_PRIVATE_KEY} -e "hosts=${SERVER_NAME}" -e 'packages_list=${params.PKG_INSTALL}'
                        """
                    
                }
            }
        }
    }
}
