pipeline {
    agent any
    environment {
     ANSIBLE_PRIVATE_KEY=credentials('automation-key') 
     ANSIBLE_FORCE_COLOR = 'true'
  }

    
    stages {
        stage('Cleanup Junk data') {
            steps {
                script {
                    
                        sh """
                        
                        ansible-playbook -i "inventory/hosts"  playbooks/ansible-package-install-new.yaml --private-key="$ANSIBLE_PRIVATE_KEY" --ssh-common-args='-o StrictHostKeyChecking=no' -e "hosts=${params.SERVER_NAME}" -e "packages_list=${params.PKG_INSTALL}"
                        """
                    
                }
            }
        }
    }
}
