
pipeline {
    agent any
    environment {
     ANSIBLE_PRIVATE_KEY=credentials('automation-key') 
     ANSIBLE_FORCE_COLOR = 'true'
  }

    
    stages {
        stage('Cleanup Junk data') {
            steps {
                script {
                    
                        sh """
                        
                        ansible-playbook -i "inventory/hosts"  playbooks/ubuntu_os_update.yaml --private-key="$ANSIBLE_PRIVATE_KEY" -e "hosts=${params.SERVER_NAME}" -e "exclude_packages_list=${params.EXCLUDE_PKGS}" --forks 10
                        """
                    
                }
            }
        }
    }
}
