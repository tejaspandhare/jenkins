pipeline {
    agent any

    options {
        timestamps()
        ansiColor('xterm')
        buildDiscarder(logRotator(numToKeepStr: '20'))
    }

    environment {
        ANSIBLE_FORCE_COLOR = 'true'
    }

    parameters {
        string(name: 'SERVER_NAME', defaultValue: 'all', description: 'Target server(s) separated by ;')
        
    }

    stages {

        stage('Checkout Repository') {
            steps {
                checkout scm
            }
        }

        stage('Run Enterprise Audit') {
            steps {
                withCredentials([file(credentialsId: 'automation-key', variable: 'ANSIBLE_KEY_FILE')]) {
                    script {
                        sh """
                            echo "Running Ansible Audit on: ${params.SERVER_NAME}"
                            
                            ansible-playbook \
                                -i inventory/hosts \
                                playbooks/auditreport1.yml \
                                --private-key="\$ANSIBLE_KEY_FILE" \
                                -e "hosts=${params.SERVER_NAME}" \
                                -e "packages_list=${params.PKG_INSTALL}"

                            RC=\$?
                            echo "Ansible Exit Code: \$RC"

                            # Treat 0 and 2 as success
                            if [ \$RC -eq 0 ] || [ \$RC -eq 2 ]; then
                                echo "Ansible completed successfully."
                                exit 0
                            else
                                echo "Ansible failed."
                                exit \$RC
                            fi
                        """
                    }
                }
            }
        }

        stage('Verify Generated Reports') {
            steps {
                sh '''
                    echo "Listing generated reports:"
                    ls -lah *.html *.txt *.csv || true
                '''
            }
        }

        stage('Publish HTML Report') {
            when {
                expression { fileExists('enterprise_security_audit.html') }
            }
            steps {
                publishHTML(target: [
                    reportDir: '.',
                    reportFiles: 'enterprise_security_audit.html',
                    reportName: 'Enterprise Security Audit Report',
                    keepAll: true,
                    alwaysLinkToLastBuild: true,
                    allowMissing: false
                ])
            }
        }
    }

    post {

        success {
            echo "Build SUCCESS - Audit completed."
        }

        unstable {
            echo "Build UNSTABLE - Check warnings."
        }

        failure {
            echo "Build FAILED - Review logs."
        }

        always {
            echo "Archiving reports..."
            archiveArtifacts artifacts: '*.html, *.txt, *.csv', allowEmptyArchive: true
        }
    }
}
