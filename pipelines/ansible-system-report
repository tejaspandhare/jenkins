pipeline {
    agent any

    options {
        timestamps()
        ansiColor('xterm')
        buildDiscarder(logRotator(numToKeepStr: '20'))
    }

    environment {
        ANSIBLE_FORCE_COLOR = 'true'
    }

    parameters {
        string(name: 'SERVER_NAME', description: 'Target server(s) separated by ; e.g. lb1;lb2;kmaster1')
    }

    stages {

        stage('Checkout Repository') {
            steps {
                echo "\u001B[1;36m========== CHECKOUT STAGE ==========\u001B[0m"
                checkout scm
            }
        }

        stage('Run Enterprise Audit') {
            steps {
                withCredentials([file(credentialsId: 'automation-key', variable: 'ANSIBLE_KEY_FILE')]) {
                    script {
                        sh """
                            echo -e "\\033[1;36m==================================================\\033[0m"
                            echo -e "\\033[1;36m     ðŸš€ ENTERPRISE SECURITY AUDIT STARTED       \\033[0m"
                            echo -e "\\033[1;36m==================================================\\033[0m"

                            echo -e "\\033[1;34mTarget Servers:\\033[0m ${params.SERVER_NAME}"
                            echo ""

                            ansible-playbook \
                                -i inventory/hosts \
                                playbooks/systemreport.yml \
                                --private-key="\$ANSIBLE_KEY_FILE" \
                                -e "hosts=${params.SERVER_NAME}" \
                                -e "workspace=${env.WORKSPACE}"

                            RC=\$?

                            echo ""
                            echo -e "\\033[1;33mAnsible Exit Code: \$RC\\033[0m"
                            echo ""

                            if [ \$RC -eq 0 ]; then
                                echo -e "\\033[1;32mâœ” SUCCESS: No changes required.\\033[0m"
                                exit 0
                            elif [ \$RC -eq 2 ]; then
                                echo -e "\\033[1;35mâš  SUCCESS WITH CHANGES: Systems were updated.\\033[0m"
                                exit 0
                            else
                                echo -e "\\033[1;31mâœ– FAILURE: Audit encountered errors.\\033[0m"
                                exit \$RC
                            fi
                        """
                    }
                }
            }
        }

        stage('Verify Generated Reports') {
            steps {
                sh '''
                    echo -e "\033[1;36m========== VERIFYING GENERATED REPORTS ==========\033[0m"
                    ls -lah system_report.*
                '''
            }
        }

        stage('Publish HTML Report') {
            when {
                expression { fileExists('system_report.html') }
            }
            steps {
                echo "\u001B[1;36m========== PUBLISHING HTML REPORT ==========\u001B[0m"
                publishHTML(target: [
                    reportDir: '.',
                    reportFiles: 'system_report.html',
                    reportName: 'Enterprise Security Audit Report',
                    keepAll: true,
                    alwaysLinkToLastBuild: true,
                    allowMissing: false
                ])
            }
        }
    }

    post {

        success {
            echo "\u001B[1;32mâœ” BUILD SUCCESS - Audit completed.\u001B[0m"
        }

        unstable {
            echo "\u001B[1;33mâš  BUILD UNSTABLE - Check warnings.\u001B[0m"
        }

        failure {
            echo "\u001B[1;31mâœ– BUILD FAILED - Review logs.\u001B[0m"
        }

        always {
            echo "\u001B[1;36mArchiving reports...\u001B[0m"
            archiveArtifacts artifacts: 'system_report.html,system_report.txt,system_report.csv', allowEmptyArchive: false
        }
    }
}
