pipeline {
    agent any

    options {
        timestamps()
        ansiColor('xterm')
        buildDiscarder(logRotator(numToKeepStr: '20'))
    }

    parameters {
        string(
            name: 'SERVER_NAME',
            description: 'Target servers separated by comma (e.g. lb1,lb2)'
        )
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Run Audit') {
            steps {
                withCredentials([file(credentialsId: 'automation-key', variable: 'ANSIBLE_KEY_FILE')]) {
                    sh """
                        ansible-playbook \
                          -i inventory/hosts \
                          playbooks/systemreport.yml \
                          --private-key="\$ANSIBLE_KEY_FILE" \
                          --limit "${params.SERVER_NAME}"
                    """
                }
            }
        }

        stage('Verify Reports') {
            steps {
                sh '''
                    echo "========== REPORT FILES =========="
                    ls -lah reports/ || true
                '''
            }
        }

        stage('Publish HTML') {
            when {
                expression { fileExists('reports/system_report.html') }
            }
            steps {
                publishHTML(target: [
                    reportDir: 'reports',
                    reportFiles: 'system_report.html',
                    reportName: 'Enterprise Security Audit Report',
                    keepAll: true,
                    alwaysLinkToLastBuild: true,
                    allowMissing: false
                ])
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'reports/*', allowEmptyArchive: true
        }
    }
}
